<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.espoir.espoirsoftservicedemotwo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.espoir.espoirsoftservicedemotwo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.espoir.espoirsoftservicedemotwo.BoundService" >
        </service>
        <service android:name="com.espoir.espoirsoftservicedemotwo.PlayMusicInBackGroundService" >
        </service>

        <activity
            android:name="com.espoir.espoirsoftservicedemotwo.MusicPlayerActivity"
            android:label="@string/title_activity_music_player" >
        </activity>
    </application>

</manifest>